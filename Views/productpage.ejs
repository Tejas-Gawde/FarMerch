<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= singleItem.name %> | FarMerch</title>
    <link href="../Stylesheets/style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="site-navbar">
      <div class="navbar-logo">
        <img src="../public/images/logoo.png" width="150px" />
      </div>
      <h3 class="site-name">FarMerch</h3>
      <nav>
        <ul class="header-button-list">
          <li><a href="/" type="button" class="btn btn-primary">Home</a></li>
          <li>
            <a href="/products" type="button" class="btn btn-primary"
              >Products</a
            >
          </li>
          <li>
            <a href="/about-us" type="button" class="btn btn-primary"
              >About Us</a
            >
          </li>
          <li>
            <a href="/contact-us" type="button" class="btn btn-primary"
              >Contact Us</a
            >
          </li>
          <li>
            <div class="dropdown">
              <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Account
              </button>
              <ul class="dropdown-menu drop">
                <li>
                  <a href="/customer" class="dropdown-item" href="#"
                    >Customer</a
                  >
                </li>
                <li>
                  <a href="/seller" class="dropdown-item" href="#">Seller</a>
                </li>
              </ul>
            </div>
          </li>
          <a href="/cart"
            ><img
              src="../public/images/cart.png"
              width="30px"
              height="30px"
              class="cartlogo"
          /></a>
        </ul>
      </nav>
    </div>

    <section class="sproduct">
      <div class="row1">
        <div class="leftcolumn">
          <img src="<%= singleItem.url %>" />
        </div>
        <div class="rightcolumn">
          <h6>Home/<%= singleItem.category %></h6>
          <h1><%= singleItem.name %></h1>
          <h2>Rs <%= singleItem.price %>/kg</h2>
          <% if (singleItem.category === 'Grains') { %>
          <select id="quantity-input" aria-placeholder="select">
            <option value="invalid">Choose quantity</option>
            <option value="1">1 kg</option>
            <option value="5">5 kg</option>
            <option value="10">10 kg</option>
          </select>
          <% } else { %>
          <select id="quantity-input">
            <option value="invalid">Choose quantity</option>
            <option value="0.2">200 gm</option>
            <option value="0.5">500 gm</option>
            <option value="1">1 kg</option>
          </select>
          <% } %>
          <button
            class="btn btn-secondary m-2"
            type="button"
            aria-expanded="false"
          >
            Add to Cart
          </button>
          <button
            class="btn btn-secondary m-2"
            type="button"
            aria-expanded="false"
            onclick="sendData('/addtocart')"
          >
            Buy Now
          </button>

          <h4>Product Details</h4>
          <p><%= singleItem.descp1 %></p>
        </div>
      </div>
    </section>
    <script>
      function sendData(url) {
        const selectElement = document.getElementById("quantity-input");
        const selectValue = selectElement.value;

        if(selectValue=='invalid') return alert("Please choose quantity");

        const data = {
          productId: <%= singleItem.id %>,
          productQuantity: selectValue
        };

        const options = {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(data)
        };

        fetch(url, options)
          .then(response => response)
          .then(data => {
            console.log("Success:", data);
          })
          .catch(error => {
            console.error("Error:", error);
          });
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
