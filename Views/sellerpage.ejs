<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Seller</title>
    <link href="../Stylesheets/style.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body class="buyer-seller-body">
    <h1 class="usertype">Seller</h1>
    <div class="buyer-seller-container">
      <div id="liveAlertPlaceholder" style="padding: 10px 10px 0px 10px"></div>
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <button
            class="nav-link active"
            id="nav-home-tab"
            data-bs-toggle="tab"
            data-bs-target="#nav-home"
            type="button"
            role="tab"
            aria-controls="nav-home"
            aria-selected="true"
          >
            Login
          </button>
          <button
            class="nav-link"
            id="nav-profile-tab"
            data-bs-toggle="tab"
            data-bs-target="#nav-profile"
            type="button"
            role="tab"
            aria-controls="nav-profile"
            aria-selected="false"
          >
            Register
          </button>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div
          class="tab-pane fade show active"
          id="nav-home"
          role="tabpanel"
          aria-labelledby="nav-home-tab"
          tabindex="0"
        >
          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control"
              placeholder="name@example.com"
              id="loginEmail"
            />
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              placeholder="Password"
              id="loginPass"
            />
            <label for="floatingPassword">Password</label>
          </div>
          <div class="submit-button">
            <button
              class="btn btn-primary"
              type="submit"
              id="login"
              onclick="sendLogin('/sellerLogin')"
            >
              Login
            </button>
          </div>
        </div>
        <div
          class="tab-pane fade"
          id="nav-profile"
          role="tabpanel"
          aria-labelledby="nav-profile-tab"
          tabindex="0"
        >
          <div class="mb-3">
            <label for="formFile" class="form-label"
              >Upload your Kisan Card for verification</label
            >
            <input class="form-control" type="file" id="formFile" />
          </div>
          <div class="input-group input-group-lg">
            <span class="input-group-text" id="basic-addon1">@</span>
            <input
              id="regName"
              type="text"
              class="form-control"
              placeholder="Seller Name"
              aria-label="Username"
              aria-describedby="basic-addon1"
            />
          </div>
          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control"
              placeholder="name@example.com"
              id="regEmail"
            />
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              placeholder="Password"
              id="regPass"
            />
            <label for="floatingPassword">Password</label>
          </div>
          <div class="submit-button">
            <button
              class="btn btn-primary"
              type="submit"
              id="register"
              onclick="sendRegister('/sellerRegister')"
            >
              Register
            </button>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      const alertPlaceholder = document.getElementById("liveAlertPlaceholder");

      function sendRegister(url) {
        const email = document.getElementById("regEmail");
        const password = document.getElementById("regPass");
        const username = document.getElementById("regName");
        const kisancard = document.getElementById("formFile");

        const formData = new FormData();
        formData.append("Email", email.value);
        formData.append("Password", password.value);
        formData.append("Username", username.value);
        formData.append("KisanCard", kisancard.files[0]);

        const options = {
          method: "POST",
          body: formData,
        };

        fetch(url, options)
          .then(async (response) => {
            if (!response.ok) {
              throw await response.json();
            }
            return response.json();
          })
          .then((data) => {
            alert(data);
            window.location.href = "/";
          })
          .catch((error) => {
            appendAlert(error, "danger");
          });
      }

      function sendLogin(url) {
        const email = document.getElementById("loginEmail");
        const password = document.getElementById("loginPass");

        const data = {
          Email: email.value,
          Password: password.value,
        };

        const options = {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        };

        fetch(url, options)
          .then(async (response) => {
            if (!response.ok) {
              throw await response.json();
            }
            return response.json();
          })
          .then((data) => {
            alert(data);
            window.location.href = "/";
          })
          .catch((error) => {
            appendAlert(error, "danger");
          });
      }

      const appendAlert = (message, type) => {
        // Check if there are any existing alerts
        const existingAlerts = alertPlaceholder.querySelectorAll(".alert");

        // If no alerts exist, create and append a new alert
        if (existingAlerts.length === 0) {
          const wrapper = document.createElement("div");
          wrapper.innerHTML = [
            `<div class="alert alert-${type} alert-dismissible" role="alert">`,
            `  <div>${message}</div>`,
            '  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
            "</div>",
          ].join("");

          alertPlaceholder.append(wrapper);
        } else {
          // If alerts exist, update the content of the first alert
          const firstAlert = existingAlerts[0];
          firstAlert.querySelector("div").textContent = message; // Update message content
        }
      };
    </script>
  </body>
</html>
