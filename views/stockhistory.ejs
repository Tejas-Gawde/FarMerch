<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FarMerch | Stock-history</title>
    <link rel="icon" type="image/png" src="Images/logoo.png" />
    <link href="../Stylesheets/style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="site-navbar">
      <div class="navbar-logo">
        <img src="Images/logoo.png" width="150px" />
      </div>
      <h3 class="site-name" href="/">FarMerch</h3>
      <nav>
        <ul class="header-button-list">
          <li><a href="/" type="button" class="btn btn-primary">Home</a></li>
          <li>
            <a href="/products" type="button" class="btn btn-primary"
              >Products</a
            >
          </li>
          <li>
            <a href="/about-us" type="button" class="btn btn-primary"
              >About Us</a
            >
          </li>
          <li>
            <a href="/contact-us" type="button" class="btn btn-primary"
              >Contact Us</a
            >
          </li>
          <li>
            <div class="dropdown">
              <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Account
              </button>
              <ul class="dropdown-menu drop">
                <li>
                  <a href="/customer" class="dropdown-item" href="#"
                    >Customer</a
                  >
                </li>
                <li>
                  <a href="/seller" class="dropdown-item" href="#">Seller</a>
                </li>
              </ul>
            </div>
          </li>
        </ul>
        <a href="/cart"
          ><img
            src="Images/cart.png"
            width="30px"
            height="30px"
            class="cartlogo"
        /></a>
      </nav>
    </div>
    <div
      style="
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
      "
    >
      <div>
        <div class="headd">Low Stock Reminder</div>

        <table class="table">
          <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Price</th>
            <th>Available in</th>
            <th>Stock</th>
          </tr>
          <% items.map(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.category %></td>
            <td><%= item.price %></td>
            <td><%= item.availableIn %></td>
            <td><%= item.stock %></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </body>
</html>
