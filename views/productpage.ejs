<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= singleItem.name %> | FarMerch</title>
    <link rel="icon" type="image/png" src="Images/logoo.png" />
    <link href="../Stylesheets/style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="site-navbar">
      <div class="navbar-logo">
        <img src="Images/logoo.png" width="150px" />
      </div>
      <h3 class="site-name" href="/">FarMerch</h3>
      <nav>
        <ul class="header-button-list">
          <li><a href="/" type="button" class="btn btn-primary">Home</a></li>
          <li>
            <a href="/products" type="button" class="btn btn-primary"
              >Products</a
            >
          </li>
          <li>
            <a href="/about-us" type="button" class="btn btn-primary"
              >About Us</a
            >
          </li>
          <li>
            <a href="/contact-us" type="button" class="btn btn-primary"
              >Contact Us</a
            >
          </li>
          <li>
            <div class="dropdown">
              <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Account
              </button>
              <ul class="dropdown-menu">
                <% if (!user) { %>
                <li class="NavbarList">
                  <a href="/customer" class="dropdown-item">Customer</a>
                </li>
                <li class="NavbarList">
                  <a href="/seller" class="dropdown-item">Seller</a>
                </li>
                <% } else if (user) { %> <% if (user.user_metadata.type ===
                "Seller") { %>
                <li class="NavbarList">
                  <a class="dropdown-item"
                    >Logged in as: <%= user.user_metadata.display_name %>
                  </a>
                </li>
                <li class="NavbarList">
                  <a href="/upload" class="dropdown-item">Upload Data</a>
                </li>
                <li class="NavbarList">
                  <a href="/stockhistory" class="dropdown-item"
                    >Low Stock Items</a
                  >
                </li>
                <li class="NavbarList">
                  <a href="/logout" class="dropdown-item">Logout</a>
                </li>
                <% } else if (user.user_metadata.type === "Customer") { %>
                <li class="NavbarList">
                  <a class="dropdown-item"
                    >Logged in as: <%= user.user_metadata.display_name %>
                  </a>
                </li>
                <li class="NavbarList">
                  <a href="/my-address" class="dropdown-item">My Address</a>
                </li>
                <li class="NavbarList">
                  <a href="/logout" class="dropdown-item">Logout</a>
                </li>
                <% } } %>
              </ul>
            </div>
          </li>
          <a href="/cart"
            ><img
              src="Images/cart.png"
              width="30px"
              height="30px"
              class="cartlogo"
          /></a>
        </ul>
      </nav>
    </div>

    <section class="sproduct">
      <div class="row1">
        <div class="leftcolumn">
          <img src="<%= singleItem.url %>" />
        </div>
        <div class="rightcolumn">
          <h6>Home/<%= singleItem.category %></h6>
          <h1><%= singleItem.name %> (<%= singleItem.availableIn %>)</h1>
          <h4>Sold By: <%= singleItem.seller %></h4>
          <h2>Price: Rs <%= singleItem.price %></h2>
          <p>Quantity:</p>
          <div class="quantity-div">
            <button class="minus-btn" onclick="decrement()">
              <i class="fa-solid fa-minus"></i>
            </button>
            <input type="text" class="quantity-input" value="1" disabled />
            <button class="plus-btn" onclick="increment()">
              <i class="fa-solid fa-plus"></i>
            </button>
          </div>
          <div class="product-btn-div">
            <button
              class="btn btn-outline-success"
              type="button"
              aria-expanded="false"
              onclick="sendData('/addtocart')"
            >
              Add to Cart
            </button>
          </div>
          <h4>Product Details</h4>
          <p><%= singleItem.descp1 %></p>
        </div>
      </div>
    </section>
    <!------------footer--------------->
    <footer class="section-p1">
      <div class="column">
        <img class="logo" src="Images/logoo.png" />
        <h4>Contact</h4>
        <p><strong>Address:</strong>562 Sambhaji road,Mumbai-57</p>
        <p><strong>Contact:</strong> +91 1234567891</p>
        <p><strong>Hours:</strong>10:00 am - 18:00 pm, Mon-Fri</p>
        <div class="follow">
          <h4>Follow us</h4>
          <div class="icon">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-pinterest-p"></i>
            <i class="fab fa-youtube"></i>
          </div>
        </div>
      </div>
      <div class="column">
        <h4>About</h4>
        <a href="/about-us">About us</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Terms and Conditions</a>
      </div>
      <div class="column">
        <h4>My Account</h4>
        <a href="/login">Sign in</a>
        <a href="/cart">View cart</a>
        <a href="#">My Wishlist</a>
        <a href="/contact-us">Help</a>
      </div>
      <div class="payment">
        <h4>Secured payment gateways</h4>
        <img src="" />
      </div>
      <div class="copyw">
        <p><i class="fa-regular fa-copyright"></i> 2023, FarMerch.com</p>
      </div>
    </footer>
    <script>
      let quantityInput = document.querySelector(".quantity-input");
       function decrement(){
        if(quantityInput.value <= 1) quantityInput.value = 1;
        else quantityInput.value = parseInt(quantityInput.value) - 1;
       }

       function increment() {
        const newValue = parseInt(quantityInput.value) + 1;
        if (newValue <= <%= singleItem.stock %>) {
           quantityInput.value = newValue;
        } else {
        alert("Maximum stock reached. Cannot increment quantity.");
        }
      }

      function sendData(url) {
        const dataToInsert = {
          id: parseInt(<%= singleItem.id %>),
          quantity: parseInt(quantityInput.value)
        };

        const data = {
          productId: <%= singleItem.id %>,
          productQuantity: quantityInput.value,
          cartData: dataToInsert
        };

        const options = {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(data)
        };

        fetch(url, options)
          .then(response => response.json())
          .then(data => {
            alert(data)
          })
          .catch(error => {
            console.error("Error:", error);
          });
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
